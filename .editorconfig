# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_size = 4

# JavaScript/TypeScript/Vue files
[*.{js,ts,vue,jsx,tsx}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Makefile (requires tabs)
[Makefile]
indent_style = tab

# Docker files
[Dockerfile]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# Composer files
[composer.json]
indent_size = 4
